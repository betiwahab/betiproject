{% extends "home/layout.html.twig" %}
{% block stylesheet %}

{% endblock %}
 {% block titletopmeu %}
     <li>Encaissement</li>
     <li><a href="{{ path('read_encaissement',{'exercice': exercice})}}">Encaissement</a></li>
     <li><a href="{{ path('create_encaissement',{'exercice': exercice})}}">Enregistrement</a></li>
 {% endblock %}
 {% block content %}
<div class="row">
    <div class="block">
    <!-- Normal Form Title -->
    <div class="block-title">
        <div class="block-options pull-right">
            <a href="{{ path('read_encaissement',{'exercice': exercice})}}" class="btn btn-alt btn-sm btn-default toggle-bordered enable-tooltip" >Retour</a>
        </div>
        <h2><strong>Nouveau Encaissement</strong> </h2>

    </div>
    <!-- END Normal Form Title -->

    <!-- Normal Form Content -->
    <form action="{{ path('create_encaissement',{'exercice': exercice})}}" method="post" class="form-bordered">
     {% if (erreur is not empty) %}
         <div class="alert alert-danger alert-dismissable">
             <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>{{ erreur.titre }}!</strong> <br>{{ erreur.message }}.
        </div>
     {% endif %}

        <div class="form-group">
            {{ form_widget(form) }}
            {{ form_rest(form) }}
        </div>
        <div class="form-group form-actions">
            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Enregistrer</button>
            <button type="reset" class="btn btn-sm btn-warning"><i class="fa fa-repeat"></i> Annuler</button>
        </div>
    </form>
    <!-- END Normal Form Content -->
</div>
</div>
 {% endblock %}